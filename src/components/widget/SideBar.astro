---
import type { MarkdownHeading } from "astro";
import { siteConfig } from "@/config";
import Categories from "./Categories.astro";
import Profile from "./Profile.astro";
import Series from './Series.astro';
import SideBarTOC from "./SideBarTOC.astro";
import Tag from "./Tags.astro";

interface Props {
	class?: string;
	headings?: MarkdownHeading[];
    series?: string;  // accept series for Series widget
}

const className = Astro.props.class;
const seriesName = Astro.props.series;
const headings = Astro.props.headings || [];

const enableSideBarTOC = siteConfig.toc.enable && siteConfig.toc.type === "sidebar";
---
<div id="sidebar" class:list={[className, "w-full"]}>
    <div class="flex flex-col w-full gap-4 mb-4">
        <Profile />
        <Tag class="onload-animation" style="animation-delay: 100ms" />
        <Categories class="onload-animation" style="animation-delay: 150ms" />
    </div>
    <div id="sidebar-sticky" class="transition-swup-fade transition-all duration-700 flex flex-col w-full gap-4 top-4 sticky">
        <!-- sidebar-sticky will now reload all the time -->
        { seriesName && <Series series={ seriesName } class="onload-animation" style="animation-delay: 200ms" /> }
        { enableSideBarTOC && headings.length > 0 && <SideBarTOC headings={headings} class="onload-animation" style="animation-delay: 250ms"></SideBarTOC> }
    </div>
</div>
