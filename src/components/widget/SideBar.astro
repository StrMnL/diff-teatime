---
import type { MarkdownHeading } from "astro";
import Categories from "./Categories.astro";
import Profile from "./Profile.astro";
import Series from './Series.astro'
import Tag from "./Tags.astro";

interface Props {
	class?: string;
	headings?: MarkdownHeading[];
    series?: string;  // accept series for Series widget
}

const className = Astro.props.class;
const seriesName = Astro.props.series
---
<div id="sidebar" class:list={[className, "w-full"]}>
    <div class="flex flex-col w-full gap-4 mb-4">
        <Profile></Profile>
    </div>
    <div id="sidebar-sticky" class="transition-all duration-700 flex flex-col w-full gap-4 top-4 sticky">
        <!-- Series's wrapper needs to exist for swup, similar to TOC -->
        <!-- wrapper replaces sidebar-sticky as parent, so mirror sidebar style to preserve card style for the widget -->
        <div class="dynamic-widget-wrapper flex flex-col w-full gap-4">{ seriesName && <Series series={ seriesName } class="onload-animation" style="animation-delay: 150ms"/> }</div>
        <Categories class="onload-animation" style="animation-delay: 200ms"></Categories>
        <Tag class="onload-animation" style="animation-delay: 250ms"></Tag>
    </div>
</div>
